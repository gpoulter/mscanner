#def form_row(name)
#set elem = $inputs[name]
<tr class="input">
  <th>$elem.renderlabel()</th>
  <td class="value">
    $elem.pre $elem.render() $elem.post
    #if $name == "delcode"
    $inputs["hidden"].render() $inputs["hidden"].renderlabel()
    #end if
  </td>
  <td class="help">
    <button type="button" class="toggle" id="toggle_h_$name">help</button>
  </td>
